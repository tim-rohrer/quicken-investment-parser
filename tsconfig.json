{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "types": ["jest", "node"],
    "module": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "esModuleInterop": false
  },
  "exclude": ["node_modules", "**/*.spec.ts", "./dist/**/*"]
}
